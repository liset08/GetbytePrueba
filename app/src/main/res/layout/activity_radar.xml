<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_light_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/cardview_light_background">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center"
            android:text="Comparación de la evaluación del perfil de desempeño entre trabajadores"
            android:textSize="18dp"
            android:textStyle="bold" />

        <com.github.mikephil.charting.charts.RadarChart
            android:id="@+id/chart23"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/btn_next_graph"
            app:layout_constraintVertical_bias="0.6" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal">
        <Button
            android:id="@+id/btn_next_graph"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:onClick="BackMenu"
            android:layout_gravity="center_horizontal"
            android:background="@color/cardview_dark_background"
            android:text="Siguiente"
            android:textColor="@color/cardview_light_background"
            />

    <Button
        android:id="@+id/button_create_pdf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"

        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:onClick="pdfView"
        android:layout_gravity="center_horizontal"
        android:background="@color/cardview_dark_background"
        android:text="Generar PDF"
        android:textColor="@color/cardview_light_background"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_read_pdf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:onClick="pdfApp"
            android:layout_gravity="center_horizontal"
            android:background="@color/cardview_dark_background"
            android:text="Mostrar PDF"
            android:textColor="@color/cardview_light_background"
            />
        <Button
            android:id="@+id/button_email_pdf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:onClick="pdfAppSend"
            android:layout_gravity="center_horizontal"
            android:background="@color/cardview_dark_background"
            android:text="Enviar PDF"
            android:textColor="@color/cardview_light_background"
            /></LinearLayout>
    </LinearLayout>
</ScrollView>
