<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMarron2"
    >
    <!-- Bloque Contenido -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:layout_marginTop = "40dp"

                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="210dp"
                    android:layout_height="200dp"
                    android:background="@drawable/ic_getbytelogo"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                >


                <GridLayout
                    android:id="@+id/mainGrid2"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:alignmentMode="alignMargins"
                    android:layout_marginTop="20dp"
                    android:columnCount="2"
                    android:columnOrderPreserved="false"
                    android:listSelector="#0f0"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:paddingBottom="0dp"
                    android:rowCount="4"
                    tools:targetApi="ice_cream_sandwich"
                    tools:ignore="UselessParent">

                    <!-- Row 1 -->
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardBackgroundColor="#40FFFFFF"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="10dp"
                        android:onClick="MenuCalidad"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:cardElevation="2dp"
                        android:layout_rowWeight="1"

                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/abc_ic_arrow_drop_right_black_24dp"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"

                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Administracion de calidad y produccion"
                                    android:textAlignment="center"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="#FF1E2837"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />


                            </LinearLayout>



                        </LinearLayout>


                    </android.support.v7.widget.CardView>
                    <!-- Column 1 -->
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardBackgroundColor="@color/cardview_light_background"
                        android:layout_columnWeight="1"
                        android:onClick="Registro"
                        app:cardCornerRadius="10dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:cardElevation="2dp"
                        android:layout_rowWeight="1"

                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="30dp"
                                android:background="@drawable/exam"
                                android:layout_gravity="center_horizontal"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"

                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Evaluación de Operarios"
                                    android:textAlignment="center"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="#FF1E2837"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />


                            </LinearLayout>



                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <!-- Column 2 -->
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardBackgroundColor="#40FFFFFF"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="10dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:onClick="BpmMenu"
                        app:cardElevation="2dp"
                        android:layout_rowWeight="1"

                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="30dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/exam"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"

                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Buenas prácticas de manufactura (BPM)"
                                    android:textAlignment="center"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="#FF1E2837"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />


                            </LinearLayout>



                        </LinearLayout>


                    </android.support.v7.widget.CardView>                    <!-- Column 1 -->
                    <!-- Column 1 -->

                    <!-- Column 2 -->
                                     <!-- Column 1 -->
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardBackgroundColor="#40FFFFFF"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="10dp"
                        android:onClick="Evalua"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:cardElevation="2dp"
                        android:layout_rowWeight="1"

                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/abc_ic_arrow_drop_right_black_24dp"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"

                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Módulo"
                                    android:textAlignment="center"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="#FF1E2837"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />


                            </LinearLayout>



                        </LinearLayout>


                    </android.support.v7.widget.CardView>






                </GridLayout>


            </LinearLayout>



        </LinearLayout>


</ScrollView>
